<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="34" id="ml.marchionni.cuaderno" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name short="CDC">Cuaderno de Comunicaciones</name>
    <description>
        Una aplicación para informes de la institución a las familias.
    </description>
    <author email="lisandro@marchionni.ml" href="https://github.com/LisandroMarcho/cuaderno-comunicaciones">
        Estudiantes de la EEST Nº1
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/img/tec.jpg" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
